<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alber.tim.simpleencryption" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Encryption_activity"
            android:label="Encryption"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alber.tim.simpleencryption.MainActivity" />
        </activity>
        <activity
            android:name=".Decryption_activity"
            android:label="Decryption"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alber.tim.simpleencryption.MainActivity" />
        </activity>
        <activity
            android:name=".Crack_Decryption_activity"
            android:label="Cracking Decryption "
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alber.tim.simpleencryption.MainActivity" />
        </activity>
    </application>

</manifest>
