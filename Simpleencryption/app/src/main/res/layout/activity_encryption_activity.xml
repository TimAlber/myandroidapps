<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
        android:ems="12"
        android:id="@+id/editText"
        android:layout_marginTop="62dp"
        android:gravity="left"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="12"
        android:id="@+id/editText2"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:gravity="left"
        android:layout_marginLeft="0dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encrypt"
        android:id="@+id/button4"
        android:onClick="encryp"
        android:layout_below="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView2"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="71dp"
        android:background="@drawable/abc_list_selector_background_transition_holo_dark"
        android:backgroundTint="@color/background_floating_material_dark"
        android:textSize="14dp"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/copy"
        android:onClick="copy"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@drawable/paste"
        android:layout_alignTop="@+id/editText"
        android:layout_alignEnd="@+id/textView2"
        android:onClick="paste" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:src="@drawable/mail"
        android:onClick="mail"
        android:layout_above="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right" />

</RelativeLayout>
